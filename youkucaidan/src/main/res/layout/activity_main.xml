<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_top_circle"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_top_circle"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:src="@drawable/top_circle"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle_circle"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:src="@drawable/middle_circle"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_circle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/home_circle"
            />
    </RelativeLayout>
</RelativeLayout>